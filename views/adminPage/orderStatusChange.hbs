{{>adminNavbar}}
<section>
    <div>
        {{>adminsidebar}}
    </div>

    <section class="p-5" style="margin-left: 225px;  margin-top: 60px;">
           <section id="head">
                        <div class="text-center mb-3">
                            <h4> <u> Ordered Product </u></h4>
                        </div>
                        {{#each userDetails}}
                        <div class="container">

                            <div class="row">
                                {{#each orderdetails.imageurl}}
                                {{#if @first}}
                                <div class="col-md-3 d-flex justify-content-center align-items-center">
                                    <img class="head-img" src="/images/categoryimage/{{filename}}" alt="" /
                                        style="max-width: 50%; border-radius: 50%;">
                                </div>
                                {{/if}}
                                {{/each}}

                                <div class="col-md-9 head-text">
                                    <h6>{{orderdetails.name}}</h6>
                                    <p> Quantity:{{productquantity}}</p>
                                    <p> MRP:{{productprize}}</p>
                                    <p class="text-danger"> Total:{{producttotal}}</p>


                                   
                                </div>
                            </div>
                        </div>
                        {{/each}}
                        

                    </section>
                      <section style="background-color: #eee;">
      <div class="container py-5">


        <div class="row">
          
          <div class="col-lg-8">


            <div class="card mb-4">
                {{#each userDetails}}
                {{#if @first}}
              <div class="card-body" style="background-color: ;">
                
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Name</p>
                  </div>
                  <div class="col-sm-9">
                    <p class="text-muted mb-0">{{userdetails.name}}</p>
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Email</p>
                  </div>
                  <div class="col-sm-9">
                    <p class="text-muted mb-0">{{userdetails.email}}</p>
                  </div>
                </div>
                <hr>


                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Contact Number</p>
                  </div>
                  <div class="col-sm-9">
                    <p class="text-muted mb-0">{{userdetails.address.[0].phone}}</p>
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">House</p>
                  </div>
                  <div class="col-sm-9">
                    <p class="text-muted mb-0">{{userdetails.address.[0].houseaddress}}</p>
                  </div>
                </div>
                <hr>
                <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">State</p>
                  </div>
                  <div class="col-sm-9">
                    <p class="text-muted mb-0">{{userdetails.address.[0].state}}</p>
                  </div>
                </div>
                <hr>
                   <div class="row">
                  <div class="col-sm-3">
                    <p class="mb-0">Pin</p>
                  </div>
                  <div class="col-sm-9">
                    <p class="text-muted mb-0">{{userdetails.address.[0].pin}}</p>
                  </div>
                </div>
                <hr>
                <div class="d-flex justify-content-between">
                    <div class="dropdown show d-flex justify-content-start">
                                   Status: <a class="btn btn-secondary dropdown-toggle ms-2" href="#" type="button"
                                        id="dropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true"
                                        aria-expanded="false">
                                        {{this.status}}
                                    </a>

                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">

                                        <button class="dropdown-item btn my-2" onclick="changeorderStatus('Shipped','{{this._id}}')">
                                            Shipped</button>
                                        <button class="dropdown-item btn my-2"  onclick="changeorderStatus('Out-of-delivery','{{this._id}}')">Out for Delivery</button>
                                        <button class="dropdown-item btn my-2"  onclick="changeorderStatus('Delivered','{{this._id}}')"> Delivered</button>

                                    </div>
                                </div>


                                
               
             
                </div>
                
           </div>
           {{/if}}
           {{/each}}
           
            </div>
           
         
    </section>
                   
    </section>


    </section>
</section>