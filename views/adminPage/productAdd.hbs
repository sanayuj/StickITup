{{>adminNavbar}}
<section style="margin-left: 14rem;">
    <div>
        {{>adminsidebar}}
    </div>
</section>
<section style="margin-left: 220px;  margin-top: 50px; ">
        <div class="container py-3 h-100">
            <div class="row d-flex justify-content-center align-items-center">
                <div>
                    <div class="card card-registration " style="border: none;" >
                        <div class=" d-flex justify-content-center g-0">
                            <div class="col-xl-6">
                                <div class="card-body p-md-5 text-black">
                                    <h3 class="mb-4 text-uppercase"><u> Add Product </u></h3>

                                <form action="/admin/addProduct" method="post" enctype="multipart/form-data">

                                    <div class="row">
                                        <div class="col-md-12 mb-4">
                                            <div class="form-outline">
                                                <label class="form-label" for="form3Example1m">Product name</label>
                                                <input type="text"  id="addproductForm" name="productName"
                                                    class="form-control form-control-lg" />

                                            </div>
                                        </div>

                                    </div>
                                    


                                    <div class="form-outline mb-4">
                                        <label class="form-label" name="" for="form3Example8">Product category</label>

                                        <div class="row">
                                            <div class="col-md-12">
                                                 {{# each category}}
                                                <select name="productCategory" class="select p-2" style="width: 100%;">
                                                    <option value="1">{{this.name}}</option>
                                                </select>
                                                 {{/each}}
                                            </div>
                                        </div>
                                    </div>
    
                                        <div class="row">
                                        <div class="col-md-12 mb-4">
                                            <div class="form-outline">
                                                <label class="form-label" for="form3Example1m">Product MRP Price</label>
                                                <input type="text" id="addproductForm" name="productmrpPrice"
                                                    class="form-control form-control-lg" />

                                            </div>
                                        </div> 
                                         </div>
                                         <div class="row">
                                        <div class="col-md-12 mb-4">
                                            <div class="form-outline">
                                                <label class="form-label" for="form3Example1m">Product SRP Price</label>
                                                <input type="text" id="addproductForm" name="productsrpPrice"
                                                    class="form-control form-control-lg" />

                                            </div>
                                        </div>
                                         </div>
                                    

                                      
                                        <div class="row">
                                        <div class="col-md-12 mb-4">
                                            <div class="form-outline">
                                                <label class="form-label" for="form3Example1m">Product Size</label>
                                                <input type="text" id="addproductForm" name="productSize"
                                                    class="form-control form-control-lg" />

                                            </div>
                                        </div>

                                    </div>
                                     <div class="row">
                                        <div class="col-md-12 mb-4">
                                            <div class="form-outline">
                                                <label class="form-label" for="form3Example1m">Product Stock</label>
                                                <input type="text" id="addproductForm" name="productStock"
                                                    class="form-control form-control-lg" />

                                            </div>
                                        </div>

                                    </div>

                                    <div class="row">
                                        <div class="col-md-12 mb-4">
                                            <div class="form-outline">
                                                <label class="form-label" for="form3Example1m">Image of product</label>

                                                <input class="form-control" type="file" id="formFile" name="productImage" multiple>
                                            </div>
                                        </div>

                                    </div>


                                    <div class="row">
                                        <div class="col-md-12 mb-4">
                                            <div class="form-outline">
                                                <label class="form-label" for="form3Example1m">Product
                                                    Description</label>
                                                <input type="text" id="form3Example1m" name="productDescription" style="height: 110px;"name="productDescription"
                                                    class="form-control form-control-lg" />

                                            </div>
                                        </div>

                                    </div>





                                    <div class="d-flex justify-content-center pt-3">

                                        <button class="btn btn-primary btn-lg ms-2 fontcolor rounded-pill login-btn"
                                           type="submit" style="">Submit</button>
                                    </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</section>