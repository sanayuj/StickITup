{{>adminNavbar}}
<section style="margin-left: 14rem;">
    <div>
        {{>adminsidebar}}
    </div>
        <div>
        <table class="table"  style="margin-top: 4rem;" >
  <thead class="thead-dark">
    <tr>
      <th scope="col">Product id</th>
      <th scope="col">Product name</th>
      <th scope="col">category id</th>
      <th scope="col">MRP</th>
      <th scope="col">SRP</th>
      <th scope="col">Stock</th>
      <th scope="col">Image</th>
      <th scope="col">Description</th>
      <th scope="col">Manage</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}} 
    {{#if status}}
  
    <tr>
      {{else}}
      <tr style="background-color: rgb(184, 182, 174);"">
        {{/if}}
      <th scope="row">{{this._id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td> 
      <td>{{this.price1}}</td> 
      <td>{{this.price2}}</td> 
      <td>{{this.stock}}</td> 
      <td>{{#each imageurl}}
        <div><img src="/images/categoryimage/{{filename}}" style="width: 50;"  class="m-1" alt="">
        {{/each}}
        </div>
        
      </td> 
      <td>{{this.product_description}}</td> 
       <td>
        <div> <a href="/editproduct/{{this._id}}" class="btn"><i class="fa fa-edit text-primary"></i></a></div>
        {{#if status}}
              <div><a href="#" onclick="disableproduct('{{this._id}}')" class="btn"><i class="fa fa-trash text-danger"></i></a></div>
              {{else}}
              
              <div><a href="#" onclick="enableProduct('{{this._id}}')" class="btn"><i class="fa fa-toggle-off text-success"></i></a></div>
              {{/if}}
      </td>
      
    </tr>
    
    {{/each}}
  </tbody>
</table>


    </div>
</section>


