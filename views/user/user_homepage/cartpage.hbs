    <div class="product-price">
        
  <div class="quantity buttons_added">
	<input type="button" value="-" class="minus"><input type="number" step="1" min="1" max="" name="quantity" value="{{this.quantity}}" title="Qty" class="input-text qty text " disabled size="4" pattern="" inputmode=""><input type="button" value="+" class="plus">
</div>

        
    </div>
   </div>
  <div class="col-md-3 cart-actions">
    <div class="product-price-total">${{this.productId.price1}}</div>
