<link rel="stylesheet" href="/stylesheets/orderstyle.css">
<form action="">
<main class="mb-3" style="width: 70%;">
{{#if useraddress}}
	<section class="checkout-form">
		
		{{#each useraddress}}
		<div class="border p-2 mb-2 address">
			<p>{{this.name}}</p>
			<p>{{this.email}}</p>
			<p>{{this.phone}}</p>
			<p>{{this.house}}(ho)</p>
			<p>{{this.city}}</p>
			<p>{{this.postal}}</p>
		</div>
		<div class="form-check mb-3">
			<input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" required>
			<label class="form-check-label" for="flexRadioDefault1" checked>
				<u> Use this Address </u>
			</label>
		</div>	
	{{/each}}
		

		<a href="/addaddress" class="btn btn-dark">+Add another account</a>
{{/if}}
	</section>
	<section class="checkout-details">

		<div class="checkout-details-inner lh-lg mb-3">

			<h3 class="pb-2 ">Order Summary</h3>
			<div class="d-flex justify-content-between pb-2">
				<div>Original Price</div>
				<div>₹{{totalAmount}}</div>
			</div>
			<div class="d-flex justify-content-between pb-2">
				<div>Coupon Savings</div>
				<div>₹0</div>
			</div>
			<div class="d-flex justify-content-between pb-2">
				<div>Delivery</div>
				<div>Free</div>
			</div>
			<div class="checkout-total d-flex justify-content-between pt-2">
				<div>
					<h6>Total</h6>
				</div>
				<div>
					<h6>₹{{totalAmount}}</h6>
				</div>
			</div>
		</div>
		<div class="d-flex justify-content-end mt-2">
		<button type="submit" class="btn btn-dark p-2 w-100">Check Out</button>
		</div>
	</section>

</main>
</form>