<link rel="stylesheet" href="/stylesheets/orderSucess.css">
<section style="    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;">
 <script>
  {{! border-radius: 4px; }}
{{! box-shadow: 0 2px 3px #ffffff; }}
display: inline-block; margin: 0 auto; }
 </script>
  <body>
    <div class="d-flex card justify-content-center">
      <div
        style="border-radius:200px; height:200px; width:200px; background: #F8FAF5; margin:0 auto;"
      >
        <i class="checkmark">✓</i>
      </div>
      <h1>Success</h1>
      <p>Order Placed<br />
        <a style="text-decoration: none;" href="/">Shop Again</a></p>
    </div>

    {{! //product view  }}
    
    <div>
      <div class="d-flex">
        <div class="d-flex">
          
          <div class="">
            {{#each userOrder}}
                  <div class="row cart-row mt-5 " style="background-color: aliceblue; border-radius: 1rem; margin: 2rem; text-decoration:none; color:black">
                <div class="col-xs-12 col-md-2">

                  <img
                    src="/images/categoryimage/{{this.orderdetails.imageurl.0.filename}}"
                    width="50%"
                  />
                </div>
                <div class="col-md-6">
                 
                  <div class="product-name">{{this.orderdetails.name}}</div>
                  <div class="product-name">₹{{orderdetails.price1}}<span
                    >{{this.cartProducts.price1}}</span></div>
                  <div class="product-options"><span
                    >Quantity:</span>{{productquantity}}</div>
                  <div class="product-price">

                  </div>
                </div>
                <div class="col-md-3 cart-actions">
                  <div class="product-price-total"><span
                    >{{this.status}}</span></div>
                  <div >
                    <p></p><span>{{paymentmethod}}</span></p>
                  </div>
                </div>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </body>
</section> 
{{>footer}}