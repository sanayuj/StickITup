{{>userNavbar}}

{{#if orderDetails}}
<table style="margin:2rem;" class="table">
  <thead>
    <tr>
      
      <th scope="col">Product Name</th>
      <th scope="col">Price</th>
      <th scope="col">Quantity</th>
      <th scope="col">Total Price</th>
      <th scope="col">Image</th>
      <th scope="col">Payment Method</th>
      <th scope="col">Order Status</th>
      
      
    </tr>
  </thead>
  <tbody>
    {{#each orderDetails}}
    <tr>
      
      <td>{{orderProducts.name}}</td>
      <td>{{productprize}}</td>
      <td>{{productquantity}}</td>
      <td>{{producttotalamount}}</td>
      <td><img width="100" src="/images/categoryimage/{{this.orderProducts.imageurl.[0].filename}}" alt=""></td>
       <td>{{paymentmethod}}</td>
     <td>{{status}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>




{{else}}

<div class="d-flex container-fluid vh-100 align-items-center  justify-content-center ">
				 <div class="row">
				 
					<div class="col-md-12">
					
							<div class="card bg-white "  >
						
						<div class="card-body cart">
								<div class="col-sm-12 empty-cart-cls text-center">
									<img src="https://i.imgur.com/dCdflKN.png" width="130" height="130" class="img-fluid mb-4 mr-3">
									<h3><strong>Your Order is Empty</strong></h3>
									
									<a href="/" class="btn btn-primary cart-btn-transform m-3" data-abc="true">continue shopping</a>
									
								
								</div>
						</div>
				</div>
						
					
					</div>
				 
				 </div>
				
				</div>


{{/if}}
 {{>footer}}