<section class="vh-100" style="background-color: black;">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 text-black">

        <div class="px-5 ms-xl-4 mt-5">
          <i class="fas fa-crow fa-2x me-3  mt-xl-4"></i>
          <span class="h1 fw-bold mb-0 " style="color: white;">STICK<span style="color: rgb(197, 206, 69);">it</span>UP
        </div>

        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5" style="height: 35rem;">

          <form style="width: 35rem;margin-top: 15rem;" id="loginForm" method="post" action="/user_login">

            

            <div class="form-outline mb-4">
              <input type="email" id="useremail" name="email" placeholder="Email" class="form-control form-control-lg" />
              <label class="form-label" for="form2Example18"></label>
              {{#if usernotExist}}
                <small class="text-danger px-2">* No account is found with this email</small>
              {{/if}}
               <small class="text-danger px-2" id="useremailError"></small>
            </div>

            <div class="form-outline ">
              <input type="password" id="userpassword" name="password" placeholder="Password" class="form-control form-control-lg" />
              <label class="form-label" for="form2Example28"></label>
              <small class="text-danger px-2" id="userpasswordError"></small>
              {{#if pass}}
              <small class="text-danger px-2">* Password not match</small>
              {{/if}}
              {{#if blockpass}}
               <small class="text-danger px-2">*  OOPS !, Your account has been temporarly blocked</small>
              {{/if}}
              
            </div>
            {{!-- <p class="small mb-3 pb-lg-2 d-flex flex-row-reverse"><a class="text-muted"  href="/user_otp">Forgot password?</a></p> --}}
        
            <div class="pt-1 mb-4">
              <button class="btn btn-info btn-lg btn-block" type="submit">Login</button>
            </div>

            
            <p style="color: white;">Don't have an account? <a href="/user_signup" class="link-info">Sign Up</a></p>

          </form>

        </div>

      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
        
          
           <img class=""  src="images/userLoginPic2.jpg" style="width: 100%;height:52rem " alt="">
        </div>
       
      </div>
    </div>
  </div>
</section>