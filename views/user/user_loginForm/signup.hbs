<section class="vh-100" style="background-color:black ;">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 text-black">

        <div class="px-5 ms-xl-4 mt-5">
          <i class="fas fa-crow fa-2x me-3  mt-xl-4"></i>
          <span class="h1 fw-bold mb-0 " style="color: white;">STICK<span style="color: rgb(197, 206, 69);">it</span>UP
        </div>
        <h5 style="color: white;margin-left:6rem">Register new account</h5>
        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5" style="height: 30rem;">
            
          <form style="width: 35rem;margin-top: 15rem;" id="signupvalidate" method="post" action="/user_signup">

            

            <div class="form-outline mb-3">
              <input type="text" id="signupName" placeholder="Username" name="name" class="form-control form-control-lg" />
              <label class="form-label" for="form2Example18"></label>
              <small class="text-danger px-2" id="signupnameErr"></small>
            </div>

            <div class="form-outline mb-3">
              <input type="email" id="signupEmail" placeholder="Email" name="email" class="form-control form-control-lg" />
              <label class="form-label" for="form2Example28"></label>
              <small class="text-danger px-2" id="signupemailErr"></small>
            </div>

            <div class="form-outline mb-3">
              <input type="password" id="signupPassword" placeholder="New password" name="password" class="form-control form-control-lg" />
              <label class="form-label" for="form2Example28"></label>
              <small class="text-danger px-2" id="signuppasswordErr"></small>
            </div>

            <div class="form-outline mb-3">
              <input type="password" id="signupConfirmPassword" placeholder="Confirm password" name="confirmPass" class="form-control form-control-lg" />
              <label class="form-label" for="form2Example28"></label>
              <small class="text-danger px-2" id="signupconfirmPassworderr"></small>
            </div>

            
            

            <div class="pt-1 mb-3">
              <button class="btn btn-info btn-lg btn-block" style="text-decoration:none" type="submit">Signup </button>
            </div>

            
            <p style="color: white;">You already have account? <a href="/user_login" class="link-info ">Login</a></p>

          </form>

        </div>

      </div>
      <div class="col-sm-6 px-0 d-none d-sm-block">
        
          
           <img class=""  src="images/userSignup.jpg" style="width: 100%;height:52rem " alt="">
        </div>
       
      </div>
    </div>
  </div>
</section>